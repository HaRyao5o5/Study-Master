rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // ユーザーデータ（メインの個人データ保存場所）
    // ========================================
    match /users/{userId} {
      // ユーザードキュメント本体: 自分のデータのみ読み書き可能
      // ユーザードキュメント本体: 読み取りは全ユーザー（ランキング表示のため）、書き込みは本人のみ
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // サブコレクション: profile（プロフィール）
      match /profile/{profileId} {
        // 読み取り: すべての認証済みユーザー（他人のプロフィール表示のため）
        allow read: if request.auth != null;
        // 書き込み: 本人のみ
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // サブコレクション: reviews（復習データ）
      match /reviews/{reviewId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // サブコレクション: courses（コース一覧）
      match /courses/{courseId} {
        // 自分のコース、または公開コースなら読み取り可能
        allow read: if (request.auth != null && request.auth.uid == userId) || resource.data.visibility == 'public';
        allow write: if request.auth != null && request.auth.uid == userId;
        
        // サブコレクション: quizzes（各コースのクイズ）
        match /quizzes/{quizId} {
          // 自分のコース、または親コースが公開なら読み取り可能
          allow read: if (request.auth != null && request.auth.uid == userId) || 
                     get(/databases/$(database)/documents/users/$(userId)/courses/$(courseId)).data.visibility == 'public';
          allow write: if request.auth != null && request.auth.uid == userId;
        }
      }

      // ========================================
      // Stripe Extension 用のコレクション
      // ========================================
      match /checkout_sessions/{id} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /subscriptions/{id} {
        allow read: if request.auth != null && request.auth.uid == userId;
      }
      match /payments/{id} {
        allow read: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Stripe 拡張機能のグローバル設定用（もし使う場合）
    match /products/{id} {
      allow read: if true;
      match /prices/{id} {
        allow read: if true;
      }
    }
    
    // ========================================
    // ランキングコレクション
    // ========================================
    match /rankings/{userId} {
      // 読み取り: すべての認証済みユーザー（ランキング表示のため）
      allow read: if request.auth != null;
      
      // 書き込み: 本人のみ
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // leaderboardコレクション（rankingsと同じルール）
    match /leaderboard/{userId} {
      // 読み取り: すべての認証済みユーザー
      allow read: if request.auth != null;
      
      // 書き込み: 本人のみ
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ========================================
    // ユーザー名レジストリ (ユニーク性保証用)
    // ========================================
    match /usernames/{username} {
      // 読み取り: 認証済みユーザーのみ
      allow read: if request.auth != null;

      // 書き込み (作成・更新・削除)
      // 作成: 新規データが自分のUIDであること
      // 更新/削除: 既存データが自分のUIDであること
      allow write: if request.auth != null && (
        (resource == null && request.resource.data.uid == request.auth.uid) ||
        (resource != null && resource.data.uid == request.auth.uid)
      );
    }
    
    // ========================================
    // 公開コース（マーケットプレイス用）
    // ========================================
    match /public_courses/{courseId} {
      // 読み取り: 誰でも可能
      allow read: if true;
      
      // 作成: 認証済みユーザー、かつauthorIdが正しいこと
      allow create: if request.auth != null 
                    && request.resource.data.authorId == request.auth.uid;
      
      // 更新:
      // 1. 作成者本人はフルアクセス
      // 2. 他人は「ダウンロード数」「いいね数」のインクリメントのみ許可
      allow update: if request.auth != null && (
        resource.data.authorId == request.auth.uid ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['downloads', 'likes', 'updatedAt'])
        )
      );
      
      // 削除: 作成者本人のみ
      allow delete: if request.auth != null 
                    && resource.data.authorId == request.auth.uid;
    }
  }
}
